{
  "manifest_version": 3,
  "name": "Notion Magic Clipper",
  "version": "0.1.0",
  "description": "Notion Magic Clipper: Save the current page into a Notion database and use GPT-5 Nano to auto-complete properties.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Notion Magic Clipper",
    "default_icon": {
      "16": "icons/Clip Logo Chrome Yellow.svg",
      "32": "icons/Clip Logo Chrome Yellow.svg",
      "48": "icons/Clip Logo Chrome Yellow.svg",
      "128": "icons/Clip Logo Chrome Yellow.svg"
    }
  },
  "icons": {
    "16": "icons/Clip Logo Chrome Yellow.svg",
    "32": "icons/Clip Logo Chrome Yellow.svg",
    "48": "icons/Clip Logo Chrome Yellow.svg",
    "128": "icons/Clip Logo Chrome Yellow.svg"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/readability/JSDOMParser.js",
        "vendor/readability/Readability.js",
        "vendor/readability/Readability-readerable.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
