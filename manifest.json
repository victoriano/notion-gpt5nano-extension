{
  "manifest_version": 3,
  "name": "Notion Magic Clipper",
  "version": "0.1.0",
  "description": "Notion Magic Clipper: Save the current page into a Notion database and use GPT-5 Nano to auto-complete properties.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Notion Magic Clipper",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/readability/JSDOMParser.js",
        "vendor/readability/Readability.js",
        "vendor/readability/Readability-readerable.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
