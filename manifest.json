{
  "manifest_version": 3,
  "name": "Guardar a Notion con GPT-5 Nano",
  "version": "0.1.0",
  "description": "Guarda la página actual en una base de datos de Notion y usa GPT-5 Nano para completar propiedades automáticamente.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Guardar en Notion"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
